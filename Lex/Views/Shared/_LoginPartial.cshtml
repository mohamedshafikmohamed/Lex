@using System.Web
@using Lex.Data
@inject SignInManager<Application_user> SignInManager
@inject UserManager<Application_user> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            var x = UserManager.GetUserId(User);
            Application_user u = await UserManager.FindByIdAsync(x);
            <li class="nav-item">
                <a class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @u.name</a>
            </li>
            <li class="nav-link">
                <a class="cart"  asp-action="Card" asp-controller="Home" style="color:#ffffff;">
                    <svg style="color:#ffffff;" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />

                    </svg>
                    Cart
                </a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link ">Logout</button>
                </form>
            </li>

        }
        else
        {

            <li class="nav-item">
                <a class="nav-link " asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
