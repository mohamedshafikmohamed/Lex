@model Lex.Models.Product

    <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
        <!-- Card-->
        <div class="card rounded shadow-sm border-0" id="product_card" onmouseover="change_background_color()">
            <div class="card-body p-4">
                <img src="~/images/@Model.photo" alt="" height="350">
                <h3> <a class="text-light3"  style="font-size:16px;">@Model.Name</a></h3>
                @{if (Model.NewPrice == 0)
                    { <p class="small text-muted font-italic" style="font-size:16px;">$@Model.Price</p>}
                else
                {
                    <p class="small text-muted font-italic" style="font-size:16px;">$@Model.NewPrice</p>
                    <p class="small text-muted font-italic " style="text-decoration:line-through; font-size:16px;">$@Model.Price</p>
                }

                }
            <ul class="list-inline small">
                @{int c = 0;
                    for (int i = 0; i < 5; i++)
                    {
                        if (Model.Rate > c)
                        {
                            <a href="#"> <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li></a>
                        }
                        else
                        {
                            <a href="#"><li class="list-inline-item m-0"><i class="fa fa-star-o text-success"></i></li></a>
                        }
                        c++;
                    }
                }
            </ul>
            </div>
        </div>
    </div>